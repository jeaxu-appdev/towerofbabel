<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all messages
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new message
    </h2>

    <form action="/insert_message" method="post">
      <div class="form-group">
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" class="form-control" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="chat_id_box">
          Chat
        </label>

        <input type="text" id="chat_id_box" name="query_chat_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="speaker_id_box">
          Speaker
        </label>

        <input type="text" id="speaker_id_box" name="query_speaker_id" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create message
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Body
        </th>

        <th>
          Chat
        </th>

        <th>
          Speaker
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @messages.each do |message| %>
      <tr>
        <td>
          <%= message.id %>
        </td>

        <td>
          <%= message.body %>
        </td>

        <td>
          <%= message.chat_id %>
        </td>

        <td>
          <%= message.speaker_id %>
        </td>

        <td>
          <%= time_ago_in_words(message.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(message.updated_at) %> ago
        </td>

        <td>
          <a href="/messages/<%= message.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
